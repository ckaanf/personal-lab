input LectureInput {
    title: String!
    description: String!
}

type Lecture {
    id: ID!
    title: String!
    description: String!
    enrolled: Boolean!
}

type LectureStats {
    title: String!
    enrolledCount: Int!
}

type Query {
    lectures: [Lecture!]!
    lectureStats: [LectureStats!]!
}

type Mutation {
    addLecture(input: LectureInput!): Lecture!
    enrollLecture(id: ID!): Lecture!
}

